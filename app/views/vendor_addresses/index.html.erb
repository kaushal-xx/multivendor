<p id="notice"><%= notice %></p>

<h1>Vendor Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Vendor</th>
      <th>Lat</th>
      <th>Lon</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Pincode</th>
      <th>Google address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendor_addresses.each do |vendor_address| %>
      <tr>
        <td><%= vendor_address.vendor_id %></td>
        <td><%= vendor_address.lat %></td>
        <td><%= vendor_address.lon %></td>
        <td><%= vendor_address.address1 %></td>
        <td><%= vendor_address.address2 %></td>
        <td><%= vendor_address.city %></td>
        <td><%= vendor_address.state %></td>
        <td><%= vendor_address.country %></td>
        <td><%= vendor_address.pincode %></td>
        <td><%= vendor_address.google_address %></td>
        <td><%= link_to 'Show', vendor_address %></td>
        <td><%= link_to 'Edit', edit_vendor_address_path(vendor_address) %></td>
        <td><%= link_to 'Destroy', vendor_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vendor Address', new_vendor_address_path %>
