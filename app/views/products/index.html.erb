<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Shopify product</th>
      <th>Shopify handle</th>
      <th>Sme commission</th>
      <th>Shopify product data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.shopify_product_id %></td>
        <td><%= product.shopify_handle %></td>
        <td><%= product.sme_commission %></td>
        <td><%= product.shopify_product_data %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

